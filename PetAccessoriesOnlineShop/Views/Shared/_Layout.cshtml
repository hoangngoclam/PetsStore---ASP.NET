    <!--css of component -->
    <!--css header  -->
    <link rel="stylesheet" href="~/Assets/Client/styles/header.css">

    <!--css home  -->
    <link rel="stylesheet" href="~/Assets/Client/styles/pages/index.css">

    <!--css product-detail  -->
    <link rel="stylesheet" href="~/Assets/Client/styles/pages/product-detail.css">

    <!--css shopping-cart  -->
    <link rel="stylesheet" href="~/Assets/Client/styles/pages/shopping-cart.css">

    <!--css login-register  -->
    <link rel="stylesheet" href="~/Assets/Client/styles/pages/login&register.css">



    <!-- css icon -->
    <link rel="stylesheet" href="~/Assets/Client/fontawesome-free-5.10.2-web/css/all.css">

    <!-- gg fonts -->
    <link href="https://fonts.googleapis.com/css?family=Merriweather&display=swap" rel="stylesheet">

    <!--css slide carosel  -->
    <link rel="stylesheet" href="~/Assets/Client/OwlCarousel2-2.3.4/docs/assets/owlcarousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assets/Client/OwlCarousel2-2.3.4/docs/assets/owlcarousel/assets/owl.theme.default.min.css">

    <!--js slide carosel  -->
    <!--js jquery  -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <script src="~/Assets/Client/OwlCarousel2-2.3.4/docs/assets/owlcarousel/owl.carousel.min.js"></script>

</head>
<style>
    .change-color a {
        color: #e15a6d;
        text-decoration: none;
    }



    .product-detail {  
        display: flex;
        align-items: center;
        height: auto;
    }
    .product-detail-cart {
        height: 100%;
        display: flex;
        align-items: center;
    }

    .size {
        padding-left: 5px;
    }

    .product-detail-cart .product-star-cart {
        font-size: 12px;
        color: #ef8743;
        margin-bottom: 5px;
    }

    .product-detail-cart .product-title-cart {
        font-size: 14px;
        font-weight: bold;
        color: #333;
        font-family: 'Merriweather', serif;
    }

    .product-detail-cart .product-price-cart {
        font-size: 16px;
        font-weight: bold;
        color: #e15a6d;
        font-family: 'Merriweather', serif;
    }

    /*register*/
    .form-register input {
        width: 90%;
        border: none;
        border: 1px #c5c0c0 solid;
        border-radius: 3px;
        height: 35px;
    }

    .form-register .button-register {
        width: 100px;
        margin: 0 20px;
        background-color: #292929;
        color: white;
        border: none;
        border-radius: 3px;
        padding: 8px 23px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.15s ease-in-out 0s;
    }
    .form-register form{
        width: 100%;
    }
</style>
<body>
    <!-- main wraps everything (header + wrapper + footer)-->
    <div class="main">
        <div class="header">
            <div class="header-contact bg-dark">
                @{Html.RenderAction("HeaderContact", "Home");}
            </div>

            <!-- end header-contact -->
            <div class="header-nav ">

                <div class="container">
                    <div class="row">
                        <div class="col-md-4 searchWidget">
                            <!-- input search + button search -->
                            <!-- <button type="submit" class="btn btn-dark btn-sm btn-icon-search"><i class="fas fa-search"></i></button>
                            <input type="search" class="form-control input-sm  input-search" id="exampleFormControlInput1"
                                placeholder="search"> -->

                            <div class="input-group input-group-sm mb-3 input-group-size">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-dark btn-icon-search">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control" placeholder=""
                                       aria-label="Example text with button addon" aria-describedby="button-addon1">
                            </div>

                        </div>
                        <div class="col-md-4 mt-md-3 mb-md-3 logo">
                            <!-- image-logo -->
                            <a href="./index.html"><img src="~/Assets/Client/images/logo2.jpg" alt=""></a>
                        </div>
                        <div class="col-md-4 shopping-cart">
                            <!-- icon-user -->
                            @*<a href="/Cart">
                                    <span class="group-cart">
                                        <i class="fas fa-shopping-cart"></i><span class="cart-number"> </span>
                                    </span>
                                </a>*@

                            @{ Html.RenderAction("HeaderCart", "Home");}

                        </div>
                    </div>
                </div>
            </div>
            <!-- end header-nav -->
            <div class="header-menu">
                @{Html.RenderAction("MainMenu", "Home");}
            </div>
            <!-- end header-menu -->
        </div>


        <!-- end header -->

        <div class="wrapper">

            @RenderBody()

        </div>
        <!-- end wrapper -->

        <div class="footer">
            <h1>footer</h1>
        </div>
        <!-- end footer -->
    </div>

    <!-- script of bootstrap 4 -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>


    <script>
        $(document).ready(function () {
            $('.owl-example').owlCarousel({
                loop: false,
                margin: 0,
                responsiveClass: true,
                autoplay: true,
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 2,
                        nav: true
                    },
                    1000: {
                        items: 3,
                        nav: false,
                        loop: true,
                    }
                }
            })
            $('.owl-carousel').owlCarousel({
                loop: false,
                margin: 0,
                responsiveClass: true,
                navSpeed: false,
                dots: true,

                responsive: {
                    0: {
                        items: 2,
                        nav: true
                    },
                    600: {
                        items: 3,
                        nav: true
                    },
                    1000: {
                        items: 4,
                        nav: false,
                        loop: false,

                    }
                }
            })

            $("#all-list-product").show();
            $("#accessories-list-product").hide();
            $("#belts-list-product").hide();
            $("#cages-list-product").hide();
            $("#food-containers-list-product").hide();

            $("#all").click(function () {
                $("#all-list-product").show();

                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#accessories").click(function () {
                $("#accessories-list-product").show();

                $("#all-list-product").hide();

                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#belts").click(function () {
                $("#belts-list-product").show();

                $("#all-list-product").hide();
                $("#accessories-list-product").hide();

                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#cages").click(function () {
                $("#cages-list-product").show();

                $("#all-list-product").hide();
                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();

                $("#food-containers-list-product").hide();
            });
            $("#food-containers").click(function () {
                $("#food-containers-list-product").show();
                $("#all-list-product").hide();
                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
            });
        });
    </script>


