
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListNewProductAll = (List<Model.EF.Product>)ViewBag.ListNewProductAll;
}

<div class="special-product">
    <div class="container">
        <!-- product title -->
        <div class="row pet-supplies">

            <div class="col product-title">
                <div class="line">--</div>
                <div class="title">ALL</div>
                <div class="line">--</div>
            </div>
        </div>

        <!-- all -->
        <div class="row" id="all-list-product">
            @*<div class="owl-carousel">*@
                @foreach (var item in ListNewProductAll)
                {
                    <div class="col-6 col-sm-4 col-md-3 item">
                        <div class="card ">
                            <a href="/product-detail/@item.MetaTitle-@item.ID">
                                <div style="position: relative">
                                    <div style="position: absolute" class="overlay">
                                    </div>
                                    <img class="card-img-top" src="@item.Image"
                                         alt="Card image" style="width:100%">
                                </div>
                            </a>
                            <div class="card-body description">
                                <!-- description: miêu tả -->
                                <div class="row">
                                    <div class="col product-star">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col product-title">
                                        @item.Name
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col product-price">
                                        <a href="~/Assets/Client/product-detail.html">
                                            <button type="submit"
                                                    class="product-price-button">
                                                $@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "contact")
                                            </button>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            @*</div>*@
        </div>


        @if (ViewBag.TotalPage > 1)
        {
            var pageDisplay = (int)ViewBag.MaxPage;
            int totalPage = (int)ViewBag.TotalPage;
            int currentPage = (int)ViewBag.PageIndex;

            //Create numeric links
            var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
            var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);


            var link = "/Category";
        <div class="paging">
            @if (currentPage > ViewBag.First)
            {
                <a href="@link?pageIndex=@ViewBag.First" title="pageFirst" class="first"><<</a>
                <a href="@link?pageIndex=@ViewBag.Prev" title="pagePrev" class="prev"><<<</a>

            }
            @for (int i = startPageIndex; i <= endPageIndex; i++)
            {
                if (currentPage == i)
                {
                    <a href="@link?pageIndex=@i" class="active" title="page @i">@i</a>
                }
                else
                {
                    <a href="@link?pageIndex=@i" class="pos" title="page @i">@i</a>

                }

            }
            @if (currentPage <totalPage)
            {
                <a href="@link?pageIndex=@ViewBag.Next" title="pageNext" class="next">>></a>
                <a href="@link?pageIndex=@ViewBag.Last" title="pageLast" class="last">>>></a>

            }
        </div>
        }
        else
        {
            <span>Don't Have Product!</span>
        }

    </div>
</div>

